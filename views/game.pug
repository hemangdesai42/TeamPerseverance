extends layout

block append head
    link(rel='stylesheet' href='/stylesheets/game.css')

block content
    div.game-container
        div.game-image
            img(src='https://upload.wikimedia.org/wikipedia/en/thumb/5/5c/Halo-_Reach_box_art.png/220px-Halo-_Reach_box_art.png')
        div.game-info
            div.game-info__name= game.name
            div
                span Genre:
                p  #{game.genre}
            div
                span Platform:
                p  #{game.platform}
            div
                span Release Date:
                p  #{game.releaseDate}
            div
                span Description:
                p  #{game.description}
        div.game-options
            if user & gameshelf
                div= gameshelf.category
            else if user
                div= 'Add to GameShelf'
            else
                div= 'Not logged in'
        div.game-reviews
            include reviews
