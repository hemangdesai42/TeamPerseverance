extends layout

block append head
    link(rel='stylesheet' href='/stylesheets/game.css')
    script(src='/javascripts/reviews.js')
    script(src='/javascripts/ratings.js')

block content
    div.game-container
        div.game-image
            img(src='https://upload.wikimedia.org/wikipedia/en/thumb/5/5c/Halo-_Reach_box_art.png/220px-Halo-_Reach_box_art.png')
            div.ratingDiv
                select#ratingSelect (name="rating")
                    option(value=null) Rating
                    option(value=1) 1
                    option(value=2) 2
                    option(value=3) 3
                    option(value=4) 4
                    option(value=5) 5
                button#ratingBtn Submit

        div.game-info
            div.game-info__name= game.name
            div
                span Genre:
                p  #{game.genre}
            div
                span Platform:
                p  #{game.platform}
            div
                span Release Date:
                p  #{game.releaseDate}
            div
                span Description:
                p  #{game.description}
        div.game-options
            if user & gameshelf
                div= gameshelf.category
                    //- each shelf in gameshelf.category
            else if user
                div.gameShelf__dropDown
                    button.gameShelf__dropDown-btn= "Add to gameshelf"
                    div.gameShelf__dropDown-content
                        a(href='/games/' + game.id + '/played') Add to Played
                        a(href='/games/' + game.id + '/playing') Add to Playing
                        a(href='/games/' + game.id + '/wishlist') Add to Wishlist
            else
                div= 'Login to add to gameshelf'
        div.game-reviews
            include reviews
